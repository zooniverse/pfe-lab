{
  "name": "pfe-lab",
  "version": "0.0.1",
  "description": "React/Redux JS application for the Zooniverse Lab",
  "main": "./src/index.jsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/zooniverse/pfe-lab"
  },
  "keywords": [
    "react",
    "redux",
    "webpack",
    "ES6",
    "ES2015",
    "babel",
    "mocha",
    "chai",
    "zooniverse"
  ],
  "scripts": {
    "start": "export HEAD_COMMIT=$(git rev-parse --short HEAD); export NODE_ENV=development; check-engines && check-dependencies && webpack-dashboard -p 3777  -- webpack-dev-server --config ./webpack.config.js",
    "_build": "export HEAD_COMMIT=$(git rev-parse --short HEAD); check-engines && check-dependencies && rimraf dist; webpack --config ./webpack.production.config.js",
    "_publish": "node ./bin/upload.js dist \"$PATH_ROOT/$SUBDIR\"",
    "_log-staging-url": "echo \"Staged at https://$SUBDIR.lab-preview.zooniverse.org/\"",
    "_stage": "export PATH_ROOT=preview.zooniverse.org/pfe-lab; npm run _build && npm run _publish && npm run _log-staging-url",
    "stage": "export NODE_ENV=staging; export SUBDIR=$(git symbolic-ref --short HEAD | awk '{print tolower($0)}'); npm run _stage",
    "stage-with-jenkins": "export NODE_ENV=staging; export SUBDIR=$(echo $BRANCH_NAME | awk '{print tolower($0)}'); npm run _stage",
    "_deploy": "export PATH_ROOT=lab.zooniverse.org; npm run _build && npm run _publish",
    "deploy": "export NODE_ENV=production; npm run _deploy",
    "eslint": "eslint .",
    "test": "NODE_ENV=development BABEL_ENV=test mocha"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "author": "Zooniverse",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zooniverse/pfe-lab"
  },
  "homepage": "https://github.com/zooniverse/pfe-lab",
  "dependencies": {
    "classnames": "~2.2.6",
    "counterpart": "~0.18.6",
    "data-uri-to-blob": "~0.0.4",
    "dompurify": "~2.0.17",
    "drag-reorderable": "~0.2.0",
    "grommet": "~1.13.0",
    "history": "~4.4.1",
    "markdownz": "~7.7.1",
    "panoptes-client": "~3.3.0",
    "prop-types": "~15.7.2",
    "react": "~15.4.1",
    "react-dom": "~15.4.1",
    "react-redux": "~5.1.1",
    "react-router": "~3.2.1",
    "react-select": "~1.0.0-rc.3",
    "redux": "~3.6.0",
    "redux-devtools-extension": "~1.0.0",
    "redux-thunk": "~2.1.0",
    "zoo-grommet": "~0.3.0",
    "zooniverse-react-components": "github:zooniverse/Zooniverse-React-Components#v0.9.1"
  },
  "devDependencies": {
    "@babel/cli": "~7.7.4",
    "@babel/core": "~7.7.4",
    "@babel/node": "~7.7.4",
    "@babel/preset-env": "~7.7.4",
    "@babel/preset-react": "~7.7.4",
    "babel-eslint": "~10.0.3",
    "babel-loader": "~8.0.6",
    "babel-plugin-react-transform": "~2.0.2",
    "babel-plugin-rewire": "~1.2.0",
    "chai": "~3.5.0",
    "check-dependencies": "~1.1.0",
    "check-engines": "~1.5.0",
    "css-loader": "~3.2.0",
    "enzyme": "~2.7.0",
    "eslint": "~4.18.2",
    "eslint-config-airbnb": "~13.0.0",
    "eslint-loader": "~1.6.1",
    "eslint-plugin-import": "~2.12.0",
    "eslint-plugin-jsx-a11y": "~2.2.3",
    "eslint-plugin-react": "~6.10.3",
    "file-loader": "~5.0.2",
    "html-webpack-plugin": "~3.2.0",
    "image-webpack-loader": "~6.0.0",
    "jsdom": "~12.0.0",
    "mini-css-extract-plugin": "~0.8.0",
    "mocha": "~5.2.0",
    "nib": "~1.1.2",
    "nock": "~9.3.3",
    "node-sass": "~4.14.1",
    "react-addons-test-utils": "~15.6.2",
    "redux-mock-store": "~1.5.3",
    "rimraf": "~2.5.4",
    "s3-batch-upload": "^1.3.0",
    "sass-loader": "~8.0.0",
    "sinon": "~7.2.7",
    "style-loader": "~1.0.0",
    "stylus": "~0.54.7",
    "stylus-loader": "~3.0.2",
    "webpack": "~4.41.2",
    "webpack-cli": "~3.3.10",
    "webpack-dashboard": "~3.2.0",
    "webpack-dev-server": "~3.11.0"
  }
}
