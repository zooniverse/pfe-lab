.media-area
  background: rgba(gray, .1)
  border: 1px solid rgba(gray, .2)
  border-radius: 5px
  overflow: auto
  padding: .5em .5em 1em
  text-align: center

.file-drop-target
  border: 2px dashed transparent
  border-radius: 3px

  &[data-can-drop]
    border-color: MAIN_HIGHLIGHT

.media-area-list
  align-items: baseline
  display: flex
  flex-wrap: wrap
  justify-content: center
  margin: 0
  padding: 0

.media-area-item
  display: block
  flex-basis: 25ch
  margin: 1px
  padding: .5em

.media-icon
  font-size: 12px
  text-align: center

.media-area-add-button
  border: 2px dashed
  border-radius: 5px
  color: MAIN_HIGHLIGHT
  display: inline-block

  &:active
    color: black
