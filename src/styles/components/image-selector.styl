.image-selector
  position: relative
  width: 160px

  &__uploader
    background-color: lightgray
    border: dashed 1px darkgray
    height: 100%
    width: 100%
    text-align: center

    &--without-border
      @extends .image-selector__uploader
      border: none

    img
      cursor: pointer
      vertical-align: top
      width: 100%

    .file-button
      cursor: pointer
      height: 100%
      left: 0px
      opacity: 0
      top: 0px
      width: 100%

  &__placeholder
    padding: 1.5em 3vw 0 3vw

  &__loader
    display: flex
    justify-content: center

  &__thumbnail
    position: relative

  &__delete-button
    @extends $reset-button
    background: white
    border-radius: 50%
    color: black
    font-size: 0.8em
    line-height: 1em
    padding: 0.1em 0.25em
    position: absolute
    right: -7px
    top: -7px

    &:focus, &:hover
      color: ALERT_COLOR
