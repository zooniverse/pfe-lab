.form
  &__fieldset
    border: none

  &__input
    border: 1px solid
    border-radius: 2px
    box-shadow: 1px 2px 5px -1px rgba(0,0,0,0.2) inset
    box-sizing: border-box
    display: block
    padding: 0.5em 1vw

    &--full-width
      width: 100%

  &__label
    font-size: 0.7em
    font-weight: bold
    letter-spacing: 0.1em
    opacity: 0.7
    text-transform: uppercase

  &__markdown-editor
    textarea
      @extends .form__input
    &--full
      textarea
        @extends .form__input
        width: 100%
